<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_purchase_redeem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/white"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/reddem_from_points"
            android:text="Redeem from points" />


        <Button
            android:id="@+id/btn_purchase_from_inapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/white"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/credit_cards"
            android:text="Purchase" />


        <Button
            android:layout_width="wrap_content"
            android:text="Submit"
            android:layout_marginTop="15dp"
            android:id="@+id/btn_submit_request_of_redeeem_code"
            android:visibility="gone"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>